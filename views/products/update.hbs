{{#extends "base"}}

  {{#block "content"}}
    <h1>Update Product: {{product.name}}</h1>
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    <form method="POST">
      {{{form}}}
      <input
        type="submit"
        value="Update Product"
        class="btn btn-primary mt-3"
      />
    </form>
  {{/block}}

{{/extends}}